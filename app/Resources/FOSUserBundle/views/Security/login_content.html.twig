{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}



<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form action="{{ url("fos_user_security_check") }}" method="post" role="form">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <fieldset>
                <h2>Please Sign In</h2>
                <hr class="colorgraph">
                <div class="form-group">

                    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="text" id="username" name="_username"  class="form-control input-lg" value="{{ last_username }}" required="required" />


                </div>
                <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" class="form-control input-lg" required="required" />
                </div>

                <span class="button-checkbox">
                    <button type="button" class="btn" data-color="info">{{ 'security.login.remember_me'|trans }}</button>
                    <input type="checkbox" name="remember_me" id="remember_me" checked="checked" class="hidden">


                    <a href="" class="btn btn-link pull-right">Forgot Password?</a>
                </span>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">

                        <input type="submit" id="_submit"  class="btn btn-lg btn-success btn-block" name="_submit" value="{{ 'security.login.submit'|trans }}" />

                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <a href="{{ url("fos_user_registration_register") }}" class="btn btn-lg btn-primary btn-block">Register</a>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
