{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/main.css') }}">

{% endblock %}

{% block header %}


    {{ render(controller(
        'AppBundle:TopNavigation:topNavigation'
    )) }}



{% endblock %}

{% block body %}

    <div class="row">


        <div class="col-md-6">
            <div class="panel-heading" style="text-align: center;">
                <input id="autocomplete" placeholder="набирайте населенный пункт, номер дома, улица" class="form-control"
                       onFocus="" type="text"></input>
            </div>
            <div id="map"></div>
        </div>
        <div class="col-md-6">
            {{ form_start(form) }}
            {{ form_row(form.latitude) }}
            {{ form_row(form.longitude) }}
            <div class="panel panel-default">
                <div class="panel-heading">Адрес</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.country) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.region) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.town) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.district) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.street) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.st_number) }}
                        </div>
                    </div>
                </div>
            </div>



            {{ form_end(form) }}

        </div>


    </div>

{% endblock %}

{% block javascripts %}

    <script> var town = '{{town}}'</script>

    {{ parent() }}

{% endblock %}